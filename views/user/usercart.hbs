
<link rel="stylesheet" href="/stylesheets/cartstyle.css">
<link rel="stylesheet" href="/stylesheets/style.css">
{{>userheader}}

<!-- cart items details -->

<div class="small-container cart-page">
  <table>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
{{#each userproducts.products}}
    <tr>
      
      <td>
        <div class="cart-info">
          <img src="/images/categoryimage/{{this.productId.imageurl.[0].filename}}" alt="" />
          <div>
            <p>{{this.productId.productname}}</p>
            <small>Price ₹{{this.productId.productSRP}}</small>
            <br />
            <a href="#">Remove</a>
          </div>
        </div>
      </td>
      <td>
       <button class="px-2 rounded text-white" style="background-color: #193D56;" onclick="changeQuantity('{{../userproducts._id}}','{{this.productId._id}}',-1)">-</button>
        <input type="text" class="rounded text-dark text-center" disabled value="{{this.quantity}}" /> 
        <button class="px-2 rounded text-white" style="background-color: #193D56;" onclick="changeQuantity('{{../userproducts._id}}','{{this.productId._id}}',1)">+</button>
        </td>
      <td>₹{{this.productId.productSRP}}</td>
    </tr>
     {{/each}}
    
  </table>

  <div class="total-price">
    <table>
      <tr>
        <td>Subtotal</td>
        <td>₹3500.00</td>
      </tr>
      <tr>
        <td>Tax</td>
        <td>₹15.00</td>
      </tr>
      <tr>
        <td>Total</td>
        <td>₹3515.00</td>
      </tr>
    </table>
  </div>
</div>

