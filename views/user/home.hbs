      <li class="nav-row-list"><a onclick="categoryFilter('Casuals')" class="nav-row-list-link">Casual</a></li>
      <li class="nav-row-list"><a  onclick="categoryFilter('Sports')"  class="nav-row-list-link">Sports</a></li>
