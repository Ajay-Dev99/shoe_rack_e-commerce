<header>
    <nav class="navbar navbar-expand-lg navbar-light header ">
        <div class="container-fluid fs-4 d-flex">
            <div class=".img-fluid me-3">
                <img class="rounded-pill" src="/images/logoimage/download.png" alt="" height="80px" width="80px">
            </div>


            <div>
                <form class="d-flex">
                    <input class="form-control me-2 rounded-pill" type="search" placeholder="Search" aria-label="Search"
                        style="width: 500px;">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>





            <div class="dropdown pe-3">
                <button class="btn dropdown-toggle " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    {{#if user}}
                    {{user.name}}
                    {{else}}

                    <span class="material-icons-sharp p-2 text-dark">person</span>

                    {{/if}}

                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    {{#if user}}
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    {{else}}
                    <li><a class="dropdown-item" href="/login">Login</a></li>
                    {{/if}}


                </ul>
            </div>

        </div>
    </nav>
</header>

<section class=" container mt-4">
    <div class="row">
        {{#each productdata}}
        <div class="col-md-3 mt-3">
            <div class="card p-3" style="width: 18rem;">
                        

                <img src="/images/categoryimage/{{this.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.price}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>