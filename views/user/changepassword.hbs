<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">


<div class="form-gap" style="padding: 40px;"></div>
<div class="container">

        <div class="col-md-4 col-md-offset-4">

            <div class="panel panel-default" style=" border-radius: 5%;">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Change Password?</h2>
                        <p>You can reset your password here.</p>


                        {{#if passErr}}
                        <small class="text-danger">Incorrect Password</small>
                        {{/if}}
                        <div class="panel-body">

                            <form id="password-change" role="form" autocomplete="off" class="form" method="post">

                                <div class="form-group">
                                    <div class="input-group mb-5">
                                        <span class="input-group-addon"><i
                                                class="glyphicon glyphicon-lock color-blue"></i></span>
                                        <input id="" name="currentpassword" placeholder="Current Password"
                                            class="form-control" type="password">
                                    </div>
                                </div>
                                <div class="input-group mb-5">
                                    <span class="input-group-addon"><i
                                            class="glyphicon glyphicon-lock color-blue"></i></span>
                                    <input id="" name="newpassword" placeholder="New Password" class="form-control"
                                        type="password">
                                </div>
                        
                        <div class="input-group mb-5">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                            <input id="" name="confirmpassword" placeholder="Cofirm Password" class="form-control"
                                type="password">
                        </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
                    </div>


                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<script>
    $("#password-change").submit((e)=>{
        e.preventDefault()

        $.ajax({
            url:"/resetpassword",
            method:"post",
            data:$("#password-change").serialize(),
            success:(response)=>{
                console.log(response)
               
                if(response.status){
                    swal("Password Changed!");
                    location.href = '/account'
                }else{
                    location.href="/changepassword"
                }
            }
        })
    })
</script>