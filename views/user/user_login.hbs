<section class="d-flex justify-content-center align-items-center" style="height:100vh;">

    <div class="bluebox fontcolor">
        <nav class="navbar navbar-light ">
            <div class="container">
                <a class="navbar-brand logo" href="#">
                    <img src="/images/download.png" alt="" width="80" height="80">
                </a>
            </div>
        </nav>
        <form action="/login" method="post" id="loginform">

            <div class="d-flex justify-content-center">
                <h1>Log in</h1>
            </div>
            <div>
                {{#if notexisted}}
                <small>
                    <p id="logmail" class="text-danger pt-1">User not found</p>
                </small>
                {{/if}}
            </div>
            <div>
                {{#if pass}}
                <small>
                    <p id="logmail" class="text-danger pt-1">Invalid username or password</p>
                </small>
                {{/if}}
            </div>
            <div class="form-outline mb-4  rounded">
                <i class="fa fa-envelope"></i>
                <label class="form-label" for="form2Example1">Email address</label>

                <input type="email" id="logemail" name="email" class="form-control inputbox" />

                <small>
                    <p id="logmail" class="text-danger pt-1" style="display: none;"></p>
                </small>
            </div>
            <div class="form-outline mb-2 ">
                <i class="fa fa-lock"></i>
                <label class="form-label" for="form2Example2">Password</label>

                <input type="password" id="logpassword" name="password" class="form-control inputbox" />

            </div>
            <div class="d-flex justify-content-end mb-4">
                <a href="" style="color: #BEC0D7;">forgot Password?</a>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-block mb-2 rounded-pill px-4 fs-5 login-btn">Log
                    in</button>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <span class="pe-2">Don't have an account?</span>
                <a href="/signup" style="color: #BEC0D7;">Sign Up</a>
            </div>
        </form>
    </div>
</section>