<link rel="stylesheet" href="/stylesheets/userprofile.css">

<header style="width: 100%; ">
    <nav class="navbar navbar-expand-lg navbar-light header ">
        <div class="container-fluid fs-4 d-flex">
            <div class=".img-fluid me-3">
               <a href="/"> <img class="rounded-pill" src="/images/logoimage/download.png" alt="" height="80px" width="80px"> </a>
            </div>
            <div>
                <form class="d-none d-sm-flex">
                    <input class="form-control me-2 rounded-pill" type="search" placeholder="Search" aria-label="Search"
                        style="width: 500px; height: 35px;">
                    {{!-- <button class="btn btn-outline-success" type="submit">Search</button> --}}
                </form>
            </div>

            <div class="d-flex justify-content-center align-items-center">
                <div class="pt-2 me-2">
                {{!-- <a href="/cart"><span class="material-icons-sharp text-white ">shopping_cart</span></a> --}}
                             <a href="/cart/" class="position-relative">
              <span class="material-icons-sharp text-white">shopping_cart
              </span>
              <span class="position-absolute   translate-middle badge rounded-pill bg-danger p-1" >
                {{#if usercart}}
               <small id="cart-count"> {{usercart}} </small>
                {{else}}
               <small id="cart-count">0</small> 
                {{/if}}
                </span>
             
            </a>  
    </div>
                <div class="dropdown pe-3">
                    <button class="btn dropdown-toggle text-white " type="button" id="dropdownMenuButton1"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        {{#if user}}
                        {{user.name}}
                        {{else}}

                      <span class="material-icons-sharp p-2  text-white">person</span>

                        {{/if}}

                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        {{#if user}}
                         <li class="nav-item mb-2 ms-2">
                        <a class="nav-link" href="/account">
                            <i class="bi bi-person-circle"></i>My Account
                        </a>
                    </li>
                        <li class="nav-item mb-2 ms-2"><a class="nav-link" href="/logout"><i class="fa fa-sign-out"></i>Logout</a></li>
                        {{else}}
                        <li><a class="dropdown-item" href="/login"><i class="fa fa-sign-in"></i> Login</a></li>
                        {{/if}}


                    </ul>
                </div>
            </div>

        </div>
    </nav>
</header>