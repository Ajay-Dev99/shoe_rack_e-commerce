<section class="d-flex justify-content-center align-items-center" style="height:100vh;">

    <div class="bluebox fontcolor">
        <nav class="navbar navbar-light ">
            <div class="logo" >
                <a class="navbar-brand" href="#">
                    <img src="/images/download.png" alt="" width="80" height="80">
                </a>
            </div>
        </nav>
        <form action="/admin/login" method="post" id="adminlogin">

            <div class="d-flex justify-content-center mb-5 ">
                <h1>Admin-Login</h1>
            </div>
            
             {{#if notfound}}
                <small class="text-danger pb-1">Admin not found</small>
                {{/if}}
             
            <div class="form-outline mb-4  rounded">
                <i class="fa fa-envelope"></i>
                <label class="form-label ms-1" for="form2Example1">Email address</label>
                <input type="email" id="adminemail" name="email" class="form-control inputbox" />
                <small class="text-danger pt-1" id="warning"></small>
            </div>
                
            <div class="form-outline mb-2 ">
            
                <i class="fa fa-lock"></i>
                <label class="form-label ms-1" for="form2Example2">Password</label>
                <input type="password" id="adminpassword" name="password" class="form-control inputbox" />
                <small class="text-danger pt-1" id="warningpassword"></small>

            </div>
              {{#if passErr}}
                <small class="text-danger pb-1">Invalid password</small>
                {{/if}}
            <div class="d-flex justify-content-end mb-4">
                <a href="" style="color: #BEC0D7;">forgot Password?</a>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit"  class="btn btn-primary btn-block mb-2 rounded-pill px-4 fs-5 login-btn">Login</button>
            </div>
            
        </form>
    </div>
</section>