{{>adminheader}}
<section>
  <div>
    {{>adminsidebar}}
  </div>
</section>
<section style="margin-left: 220px;  margin-top: 50px;">
  <div class="row container p-5">
    <div class="col-md-8 col-12">
      <table class="table table-bordered ">
        <thead>
          <tr class="bg-dark text-white">
            <th scope="col">Category Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Image</th>
            <th scope="col">Manage</th>
          </tr>
        </thead>
        {{#each categories}}
        <tbody class="bg-light">
          <tr>
            <th scope="row">{{this._id}}</th>
            <td>{{this.categoryname}}</td>
            <td><img src="/images/categoryimage/{{this.imageurl}}" alt="" height="80px" width="80px"></td>
            <td>
              <div class="d-flex">
             <div> <a href="/admin/editcategory/{{this._id}}" class="btn"><i class="fa fa-edit text-primary"><p class="text-dark">edit</p></i></a></div>
              <div><a href="#" class="btn"><i class="fa fa-trash text-danger"><p class="text-dark">delete</p></i></a></div>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-4 col-12 p-5" style="background-color: #ddddddc9;">
      <h2>Add category</h2>
      <form action="/admin/addcategory" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Category Name</label>
          <input type="text" class="form-control" name="categoryname" aria-describedby="emailHelp" required />

        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Add image</label>
          <input class="form-control" type="file" name="image" required />
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn fontcolor login-btn">Submit</button>
        </div>
      </form>
    </div>
  </div>

</section>