                                <span class="material-icons-sharp text-white">
                                    group
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 ">
                    <div class="card p-3 box-shadow text-decoration-none count_div" style="background-color: #4e4376;">
                        <div class="d-md-flex justify-content-between align-items-center p-2 overflow">
                            <div class="flex-column lh-1  ">
                                <p class="text-white">Total Products</p>
                                <span class="text-white fs-3">{{productCount}}</span>
                            </div>
                            <div class="flex-column lh-1  ">
                                <span class="material-icons-sharp text-white">
                                    checkroom
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 ">
                    <div class="card p-3 box-shadow text-decoration-none  count_div" style="background-color: #46aef7;">
                        <div class="d-md-flex justify-content-between align-items-center p-2 overflow">
                            <div class="flex-column lh-1  ">
                                <p class="text-white">Orders</p>
                                <span  class="text-white fs-3"> {{orderCount}}</span>
                            </div>
                            <div class="flex-column lh-1  ">
                                <span class="material-icons-sharp text-white">
                                    inventory
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 ">
                    <div class="card p-3 box-shadow text-decoration-none count_div" style="background-color: #ff9a38;">
                        <div class="d-md-flex justify-content-between align-items-center p-2 overflow">
                            <div class="flex-column lh-1 ">
                                <p class="text-white">Total Revenue</p>
                                {{#each total}}
                                {{#if @first}}
                                <span  class="text-white fs-3"> â‚¹ {{total}}</span>
